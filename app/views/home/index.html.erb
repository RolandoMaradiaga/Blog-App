<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="text-center">
    <h1 class="mb-4">Welcome to the Mini Blogging Platform</h1>
    <% if user_signed_in? %>
      <p class="mb-3">Hello, <strong><%= current_user.email %></strong>!</p>
      <div class="mb-4">
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-outline-primary me-2' %>
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' %>
      </div>
    <% else %>
      <div class="mb-4">
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary me-2' %>
        <%= link_to 'Log In', new_user_session_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
    
    <%= link_to 'All Posts', posts_path, class: 'btn btn-success mt-3' %>
  </div>
</div>
